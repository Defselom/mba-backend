<div
  class='email-footer'
  style='background-color: #f8f9fa; padding: 30px 20px; text-align: center; border-top: 1px solid #e9ecef;'
>

  <!-- Social Links -->
  <div class='social-links' style='margin-bottom: 20px;'>
    <a
      href='https://facebook.com/mba'
      style='display: inline-block; margin: 0 10px; color: #667eea; text-decoration: none;'
    >
      <img
        src='https://via.placeholder.com/24x24/667eea/ffffff?text=f'
        alt='Facebook'
        style='width: 24px; height: 24px; vertical-align: middle;'
      />
    </a>
    <a
      href='https://twitter.com/mba'
      style='display: inline-block; margin: 0 10px; color: #667eea; text-decoration: none;'
    >
      <img
        src='https://via.placeholder.com/24x24/667eea/ffffff?text=t'
        alt='Twitter'
        style='width: 24px; height: 24px; vertical-align: middle;'
      />
    </a>
    <a
      href='https://linkedin.com/company/mba'
      style='display: inline-block; margin: 0 10px; color: #667eea; text-decoration: none;'
    >
      <img
        src='https://via.placeholder.com/24x24/667eea/ffffff?text=in'
        alt='LinkedIn'
        style='width: 24px; height: 24px; vertical-align: middle;'
      />
    </a>
    <a
      href='https://instagram.com/mba'
      style='display: inline-block; margin: 0 10px; color: #667eea; text-decoration: none;'
    >
      <img
        src='https://via.placeholder.com/24x24/667eea/ffffff?text=ig'
        alt='Instagram'
        style='width: 24px; height: 24px; vertical-align: middle;'
      />
    </a>
  </div>

  <!-- Quick Links -->
  <div class='quick-links' style='margin-bottom: 20px;'>
    <a
      href='{{url "/about"}}'
      style='color: #667eea; text-decoration: none; margin: 0 15px; font-size: 14px;'
    >À propos</a>
    <a
      href='{{url "/contact"}}'
      style='color: #667eea; text-decoration: none; margin: 0 15px; font-size: 14px;'
    >Contact</a>
    <a
      href='{{url "/help"}}'
      style='color: #667eea; text-decoration: none; margin: 0 15px; font-size: 14px;'
    >Aide</a>
    <a
      href='{{url "/privacy"}}'
      style='color: #667eea; text-decoration: none; margin: 0 15px; font-size: 14px;'
    >Confidentialité</a>
  </div>

  <!-- Company Info -->
  <div
    class='company-info'
    style='margin-bottom: 20px; font-size: 13px; color: #6c757d; line-height: 1.5;'
  >
    <strong>MBA - La Minute des Banques et des Assurances</strong><br />
    Dakar, Sénégal<br />
    <a href='tel:+22112345678' style='color: #667eea; text-decoration: none;'>+221 12 34 56 78</a>
    |
    <a
      href='mailto:contact@mba.com'
      style='color: #667eea; text-decoration: none;'
    >contact@mba.com</a>
  </div>

  <!-- Copyright -->
  <div class='copyright' style='font-size: 12px; color: #6c757d; margin-bottom: 15px;'>
    ©
    {{currentYear}}
    MBA. Tous droits réservés.
  </div>

  <!-- Unsubscribe -->
  <div class='unsubscribe' style='font-size: 11px; color: #9ca3af;'>
    Vous recevez cet email car vous êtes inscrit à notre service.<br />
    <a href='{{url "/unsubscribe"}}' style='color: #667eea; text-decoration: none;'>Se désabonner</a>
    |
    <a href='{{url "/preferences"}}' style='color: #667eea; text-decoration: none;'>Gérer mes
      préférences</a>
  </div>

  <!-- Email Client Compatibility -->
  <!--[if mso]>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
            <td style="padding: 20px 0; text-align: center; font-size: 12px; color: #6c757d;">
                © {{currentYear}} MBA. Tous droits réservés.
            </td>
        </tr>
    </table>
    <![endif]-->
</div>

<!-- Tracking Pixel (optionnel) -->
{{#if trackingId}}
  <img
    src='{{url "/track"}}?id={{trackingId}}'
    width='1'
    height='1'
    style='display: none;'
    alt=''
  />
{{/if}}

<style>
  /* Footer responsive styles */
  @media only screen and (max-width: 600px) {
    .social-links a {
      margin: 0 8px !important;
    }

    .quick-links a {
      display: block !important;
      margin: 5px 0 !important;
      font-size: 13px !important;
    }

    .company-info {
      font-size: 12px !important;
    }

    .email-footer {
      padding: 20px 15px !important;
    }
  }

  /* Dark mode footer */
  @media (prefers-color-scheme: dark) {
    .email-footer {
      background-color: #2d2d2d !important;
      border-top-color: #404040 !important;
    }

    .company-info,
    .copyright,
    .unsubscribe {
      color: #cccccc !important;
    }
  }
</style>